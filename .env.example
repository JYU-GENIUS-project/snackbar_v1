# =============================================================================
# Environment Variables for Self-Service Snack Bar Kiosk System
# =============================================================================
#
# Copy this file to .env and configure the values for your environment.
# NEVER commit the .env file to version control.
#
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration [REQUIRED]
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=snackbar_prod
DB_USER=snackbar_app
DB_PASSWORD=your_secure_database_password_here
DB_SSL=disable
POOL_MIN=2
POOL_MAX=10

# -----------------------------------------------------------------------------
# Security & Authentication [REQUIRED]
# -----------------------------------------------------------------------------
# JWT secret for signing tokens (generate with: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here_at_least_64_chars_long

# Express session secret
SESSION_SECRET=your_session_secret_here_at_least_32_chars

# bcrypt hashing rounds (12 recommended for production)
BCRYPT_ROUNDS=12

# Session timeout in milliseconds (30 minutes = 1800000)
SESSION_TIMEOUT_MS=1800000

# JWT expiration (e.g., 1h, 24h, 7d)
JWT_EXPIRATION=24h

# -----------------------------------------------------------------------------
# Manual Confirmation Configuration
# -----------------------------------------------------------------------------
# Timeout (in seconds) before an unpaid transaction is marked as abandoned
CONFIRMATION_TIMEOUT_SECONDS=60

# Target for persisting confirmation audit trails (database, syslog, etc.)
CONFIRMATION_AUDIT_CHANNEL=database

# -----------------------------------------------------------------------------
# SMTP Email Configuration
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@snackbar.example.com
SMTP_SECURE=false

# Admin notification email addresses (comma-separated)
ADMIN_NOTIFICATION_EMAILS=admin@example.com

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_DIR=/backups

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
