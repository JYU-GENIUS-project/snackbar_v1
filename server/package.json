{
  "name": "snackbar-api",
  "version": "1.0.0",
  "description": "Self-Service Snack Bar Kiosk System - API Server",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "snackbar",
    "kiosk",
    "express",
    "api"
  ],
  "author": "Snackbar Team",
  "license": "MIT",
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "supertest": "^7.1.4"
  },
  "overrides": {
    "test-exclude": "7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
