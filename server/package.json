{
  "name": "snackbar-api",
  "version": "1.0.0",
  "description": "Self-Service Snack Bar Kiosk System - API Server",
  "main": "dist/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts,tsx --exec \"ts-node --project tsconfig.json src/server.ts\"",
    "build": "tsc -b tsconfig.build.json",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "snackbar",
    "kiosk",
    "express",
    "api"
  ],
  "author": "Snackbar Team",
  "license": "MIT",
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "pg": "^8.11.3",
    "sharp": "^0.33.3",
    "uuid": "^9.0.1",
    "@snackbar/shared-types": "file:../packages/shared-types"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.43",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "supertest": "^7.1.4"
  },
  "overrides": {
    "test-exclude": "7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}